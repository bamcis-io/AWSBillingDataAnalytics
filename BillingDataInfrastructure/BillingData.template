                            {
                                "Name" : "reservedinstancecost",
                                "Type" : "double"
                            },
                            {
                                "Name" : "ondemandcostforterm",
                                "Type" : "double"
                            },
                            {
                                "Name" : "costsavings",
                                "Type" : "double"
                            },
                            {
                                "Name" : "percentsavings",
                                "Type" : "double"
                            },
                            {
                                "Name" : "vcpu",
                                "Type" : "double"
                            },
                            {
                                "Name" : "memory",
                                "Type" : "double"
                            }
                        ]
                    }
                }
            }
        },
